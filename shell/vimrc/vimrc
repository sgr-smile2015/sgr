"set guifont=Sauce\ Code\ Powerline:h14.5
set laststatus=2
let g:airline_powerline_fonts=1
set encoding=utf-8
set t_Co=256
set fillchars+=stl:\ ,stlnc:\

"设置终端的配色方式
"set term=xterm-256color
